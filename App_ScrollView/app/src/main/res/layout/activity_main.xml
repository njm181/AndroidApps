<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="372dp"
        android:layout_height="514dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/fresas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/fresas" />

            <ImageButton
                android:id="@+id/manzanas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/manzanas" />

            <ImageButton
                android:id="@+id/piña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/pina" />

            <ImageButton
                android:id="@+id/sandia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/sandia" />

            <ImageButton
                android:id="@+id/bananas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/bananas" />

            <ImageButton
                android:id="@+id/cerezas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/cerezas" />

            <ImageButton
                android:id="@+id/kiwis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/kiwis" />

            <ImageButton
                android:id="@+id/mangos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/mangos" />

            <ImageButton
                android:id="@+id/melon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/melon" />

            <ImageButton
                android:id="@+id/naranjas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/naranjas" />

            <ImageButton
                android:id="@+id/peras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/pera" />

            <ImageButton
                android:id="@+id/uvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripción"
                android:onClick="Selecccion"
                app:srcCompat="@drawable/uvas" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>